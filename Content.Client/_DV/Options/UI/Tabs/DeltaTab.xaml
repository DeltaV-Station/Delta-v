<tabs:DeltaTab xmlns="https://spacestation14.io"
               xmlns:tabs="clr-namespace:Content.Client._DV.Options.UI.Tabs"
               xmlns:ui="clr-namespace:Content.Client.Options.UI">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Vertical" Margin="8 8 8 8" VerticalExpand="True">
            <Label Text="{Loc 'ui-options-general-forknotice'}"
                   StyleClasses="LabelKeyText"/>
            <Label Text="{Loc 'ui-options-general-accessibility'}"
                   StyleClasses="LabelKeyText"/>
            <CheckBox Name="DisableFiltersCheckBox" Text="{Loc 'ui-options-no-filters'}" />
            <CheckBox Name="DisableGlimmerEffectCheckBox" Text="{Loc 'ui-options-disable-glimmer-effect'}" />
            <Label Text="{Loc 'ui-options-delta-tips'}"
                   StyleClasses="LabelKeyText"/>
            <CheckBox Name="DisableTipsCheckBox" Text="{Loc 'ui-options-delta-disable-tips'}" />
            <Button Name="ResetTipsButton" Text="{Loc 'ui-options-delta-reset-tips'}" MaxWidth="200" Margin="0 4 0 0" />
        </BoxContainer>
        <ui:OptionsTabControlRow Name="Control" Access="Public" />
    </BoxContainer>
</tabs:DeltaTab>
